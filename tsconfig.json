{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.js"],
  "exclude": ["node_modules", "dist"]
}
